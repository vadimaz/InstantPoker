<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="bigCard">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">160dp</item>
        <item name="android:layout_width">115dp</item>
    </style>

    <style name="mediumCard">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">130dp</item>
        <item name="android:layout_width">90dp</item>
    </style>

    <style name="smallCard">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_width">55dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="appText">
        <item name="android:textColor">#D6D7D7</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
